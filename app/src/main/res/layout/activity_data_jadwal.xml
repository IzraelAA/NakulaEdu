<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".DataJadwalActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Jadwal Pelajaran"
            android:textColor="#40368C"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/senin"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="50dp"
            android:scaleType="fitXY"
            android:src="@drawable/senin" />

        <ImageView
            android:id="@+id/selasa"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/selasa" />

        <ImageView
            android:id="@+id/rabu"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/rabu" />

        <ImageView
            android:id="@+id/kamis"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/kamis" />

        <ImageView
            android:id="@+id/jumat"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/jumat" />

        <ImageView
            android:id="@+id/sabtu"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/sabtu" />
    </LinearLayout>
</ScrollView>